<h4 class="text-center">@Tokens.RegisterAsCustomer</h4>
<form id="RegisterForm" asp-action="Register" method="post">
    @if (ViewBag.ErrorMessage != null)
    {
<div class="alert alert-danger">
    <i class="fas fa-warning"></i> @ViewBag.ErrorMessage
</div>}
    <input type="hidden" name="IsExternalLogin" value="@Model.IsExternalLogin.ToString()" />
    <input type="hidden" name="ExternalLoginAuthSchema" value="@Model.ExternalLoginAuthSchema" />

    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  Name:</label>
        <input type="text" name="Name" id="ss" class="form-control" placeholder="@L("Name")" value="@Model.Name" required maxlength="@AbpUserBase.MaxNameLength">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-arrow-left"></span>
            </div>
        </div>
    </div>


    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  Surname:</label>
        <input type="text" name="Surname" class="form-control" placeholder="@L("Surname")" value="@Model.Surname" required maxlength="@AbpUserBase.MaxSurnameLength">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-arrow-left"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  EmailAddress:</label>
        <input type="email" name="EmailAddress" class="form-control" placeholder="@L("EmailAddress")" value="@Model.EmailAddress" required maxlength="@AbpUserBase.MaxEmailAddressLength">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-envelope"></span>
            </div>
        </div>
    </div>




    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  Address:</label>

        <input type="text" name="Address" class="form-control" placeholder="@L("Address")" value="@Model.Address">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-address-card"></span>
            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  Street:</label>

        <input type="text" name="Street" class="form-control" placeholder="@L("Street")" value="@Model.Street">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-street-view"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  Building:</label>

        <input type="text" name="Building" class="form-control" placeholder="@L("Building")" value="@Model.Building">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-building"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label class="col-2 text-cyan">  DateOfBirth:</label>

        <input type="date" name="DateOfBirth" class="form-control" placeholder="@L("DateOfBirth")" value="@Model.DateOfBirth">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-birthday-cake"></span>
            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        <label class="col-2 text-cyan" asp-for="UserName">@Tokens.UserName</label>

        <input type="text" name="UserName" class="form-control" placeholder="@L("UserName")" value="@Model.UserName" required maxlength="@AbpUserBase.MaxUserNameLength">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        <label class="col-2 text-cyan" asp-for="Password">@Tokens.Password</label>

        <input type="password" name="Password" class="form-control" placeholder="@L("Password")" required maxlength="@AbpUserBase.MaxPlainPasswordLength">
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-lock"></span>
            </div>
        </div>
    </div>
    <div class="form-group text-left">
        <label class="text-blue h5" asp-for="Gender">@Tokens.Gender</label>
        <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control">
            <option selected="selected" value="">@Tokens.ChooseGender</option>
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="Gender"></span>
        </div>
    </div>


    <div class="form-group text-left">
        <label class="text-blue h5" asp-for="PhoneNumber">@Tokens.PhoneNumber</label>

        <input class="form-control" asp-for="PhoneNumber" aria-describedby="PhoneNumber" />
        <div class="invalid-feedback">
            <span asp-validation-for="PhoneNumber"></span>
        </div>
    </div>


    <div class="form-group text-left">
        <label class="text-blue h5" asp-for="CountryId">@Tokens.Country</label>
        <select asp-for="CountryId" asp-items="Model.Countries" class="form-control">
            <option selected="selected" value="">@Tokens.Country</option>
        </select>
        <div class="invalid-feedback">
            <span asp-validation-for="CountryId"></span>
        </div>
    </div>
    <div class="form-group text-left">
        <label class="text-blue h5" asp-for="StateId">@Tokens.City</label>
        <select asp-for="StateId" class="form-control">
            <option selected="selected" value="">@Tokens.City</option>
        </select>
    </div>

    <div class="row">
        <div class="col-8">
            <a asp-action="Login" class="btn btn-default btn-flat"><i class="fa fa-arrow-circle-left"></i> @L("Back")</a>
        </div>
        <div class="col-4">
            <button type="submit" id="RegisterButton" class="btn btn-primary btn-flat float-right">@L("Register")</button>
        </div>
    </div>
</form>
